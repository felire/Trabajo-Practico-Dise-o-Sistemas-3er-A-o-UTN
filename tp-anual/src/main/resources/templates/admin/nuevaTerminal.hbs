{{#partial "contenido"}}

<form data-toggle="validator" role="form" class="form" action="{{url}}" method="POST">
  <div class="form-group">
 <label for="text" class="control-label">Nombre:</label>
 <input type="text" class="form-control"  name="nombre" required>
 	<BR>
	<label for="text" class="control-label">Usuario:</label>
	<input type="text" class="form-control" name="user" required>
	<BR>
	<label for="text" class="control-label">Contraseña:</label>
	<input type="text" class="form-control" name="pass" required>
  </div>
    <div class="form-group">
	<label for="text">Comuna:</label>
		      <select class="form-control" name="comuna">
		     {{#each comunas}}
			  	<option value={{this}}>{{this}}</option>
			  {{/each}}
   		  </select>
  </div>
  <BR>
    <label for="text">Acciones:</label><br>
    <div class="checkbox">
      <label><input type="checkbox" name="obsBusqueda" notchecked>Almacenar búsquedas</label>
    </div>
    <div class="checkbox">
      <label><input type="checkbox" name="obsMail"  notchecked>Notificar por mail</label>
    </div>
    <BR>
  <button type="submit" class="btn btn-default">Guardar</button>
{{/partial}}


