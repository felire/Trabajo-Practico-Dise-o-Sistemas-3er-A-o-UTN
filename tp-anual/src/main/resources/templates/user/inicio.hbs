{{#partial "contenido"}}

<form role="form" action="/consultas" method="GET">
  <div class="form-group">
    <label for="fechaDesde">Fecha desde: </label>
    <input type="text" id="fechaDesde" class="form-control" name="fechaDesde">
  </div>
  <div class="form-group">
    <label for="fechaHasta">Fecha hasta: </label>
    <input type="text" id="fechaHasta" class="form-control" name="fechaHasta">
  </div>
  <div class="form-group">
    <label for="cantidadResultados">Cantidad de POIs resultado: </label>
    <input type="number" id="cantidadResultados" class="form-control" name="cantidadResultados">
  </div>
  <button type="submit" class="btn btn-default">Buscar</button>
</form>


<table class="table table-striped">
  	<tr>
		<th>Nombre</th>
		<th>Direccion</th>
		<th>Radio de Cercania</th>
		<th>Ver</th>
	</tr>
	{{#each this}}
		<tr>
			<td>{{nombre}}</td>
			<td>{{direccion}}</td>
			<td>{{radio}}</td>
			<td><a href="{{url}}"><span class="glyphicon glyphicon-search"></span></a>
		</tr>
	{{/each}}
</table>
{{/partial}}


